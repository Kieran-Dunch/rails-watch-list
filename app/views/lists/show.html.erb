<div class="navbar navbar-light">
  <h1 class='m-1'><%= @list.name %></h1>
  <a><%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary m-1"%></a>
  <a><%= link_to "Back", lists_path, class: "btn btn-primary m-1"%></a>
</div>
 <div class="row m-1">
  <% @list.movies.each do |movie| %>
    <div class="card m-1" style="width: 18rem; col-4">
      <img src=<%=movie.poster_url%> alt="<%=movie.title%> poster" class="card-img-top mt-2">
      <div class="card-body">
        <h4 class="card-text"><strong><%= movie.title %></strong></h4>
        <p class="card-text"><%= movie.overview %></p>
        <p class="card-text">Rating: <%= movie.rating %>/10</p>
      </div>
    </div>
  <% end %>
  </div>
